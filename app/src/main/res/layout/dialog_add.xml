<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EFEEEA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Voter Details"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#096B68"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Voter ID -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voter ID"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/edVoterID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Voter ID"
            android:textColor="#6A5E5E"
            android:textColorHint="#6A5E5E"
            android:padding="12dp"
            android:backgroundTint="#90D1CA"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <!-- Voter Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voter Name"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/edVoterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Voter Name"
            android:textColor="#6A5E5E"
            android:textColorHint="#6A5E5E"
            android:padding="12dp"
            android:backgroundTint="#90D1CA"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <!-- Voter Address -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voter Address"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/edVoterAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Voter Address"
            android:textColor="#6A5E5E"
            android:textColorHint="#6A5E5E"
            android:padding="12dp"
            android:backgroundTint="#90D1CA"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <!-- Voter Phone -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voter Phone Number"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/edVoterPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Phone Number"
            android:inputType="phone"
            android:textColor="#6A5E5E"
            android:textColorHint="#6A5E5E"
            android:padding="12dp"
            android:backgroundTint="#90D1CA"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="24dp" />

        <!-- Add Button -->
        <Button
            android:id="@+id/btnadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Data"
            android:backgroundTint="#096B68"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>
</ScrollView>
