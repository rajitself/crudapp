<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EFEEEA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Voter Details"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#096B68"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Voter ID -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Voter ID"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/edtVoterID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new Voter ID"
            android:textColor="#6A5E5E"
            android:textColorHint="#6A5E5E"
            android:padding="12dp"
            android:backgroundTint="#90D1CA"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <!-- Voter Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Voter Name"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/edtVoterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new Voter Name"
            android:textColor="#6A5E5E"
            android:textColorHint="#6A5E5E"
            android:padding="12dp"
            android:backgroundTint="#90D1CA"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <!-- Voter Address -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Voter Address"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/edtVoterAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new Voter Address"
            android:textColor="#6A5E5E"
            android:textColorHint="#6A5E5E"
            android:padding="12dp"
            android:backgroundTint="#90D1CA"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <!-- Voter Phone -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Voter Phone Number"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/edtVoterPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new Phone Number"
            android:inputType="phone"
            android:textColor="#6A5E5E"
            android:textColorHint="#6A5E5E"
            android:padding="12dp"
            android:backgroundTint="#90D1CA"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="24dp" />

        <!-- Add Button -->
        <Button
            android:id="@+id/edtbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Data"
            android:backgroundTint="#096B68"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium" />
        <Button
            android:id="@+id/dltbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Data"
            android:backgroundTint="#87091A"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>
</ScrollView>
